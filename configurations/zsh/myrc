# Zsh configuration
export LC_COLLATE="C"
bindkey ';5D' emacs-backward-word
bindkey ';5C' emacs-forward-word
prompt off

# General aliases
alias ll="ls -plha --group-directories-first --color"

# Git aliases
alias s='git status -s'
alias f='git fetch'
alias fr='git fetch && git rebase'
alias b='git branch'
