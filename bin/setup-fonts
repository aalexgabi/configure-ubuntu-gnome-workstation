#!/bin/bash

# Stop on error
set -e

# Ensure fonts directory exists
mkdir -p ~/.local/share/fonts
# Download and extract fonts
wget -q -O - https://github.com/adobe-fonts/source-code-pro/archive/2.030R-ro/1.050R-it.tar.gz | tar -C ~/.local/share/fonts --strip-components=2 -xzvf - source-code-pro-2.030R-ro-1.050R-it/OTF/
# Rebuild fonts cache
fc-cache -f -v
