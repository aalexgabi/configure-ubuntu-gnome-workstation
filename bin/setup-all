#!/bin/bash

# Stop on error
set -e

# Get project root directory
BASEDIR=$(dirname $(realpath $0))/..

if [[ $(id -u) -eq 0 ]] ; then
  echo 'fatal: Script should not be run as root'
  exit 1
fi

echo 'Setting up Apple keyboard...'
$BASEDIR/bin/setup-apple-keyboard

echo 'Installing system packages...'
$BASEDIR/bin/setup-packages
echo 'Setting up fonts...'
$BASEDIR/bin/setup-fonts
echo 'Setting up clock...'
$BASEDIR/bin/setup-clock

echo 'Setting up Chrome...'
$BASEDIR/bin/setup-chrome
echo 'Setting up Code...'
$BASEDIR/bin/setup-code
echo 'Setting up Git...'
$BASEDIR/bin/setup-git
echo 'Setting up Terminator...'
$BASEDIR/bin/setup-terminal
echo 'Setting up Zsh...'
$BASEDIR/bin/setup-zsh
