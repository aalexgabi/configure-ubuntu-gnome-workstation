#!/bin/bash

# Stop on error
set -e

# Calculating project root directory
BASEDIR=$(dirname $(realpath $0))/..

echo 'Configuring Apple keyboard...'
$BASEDIR/bin/configure-apple-keyboard
echo 'Installing system packages...'
$BASEDIR/bin/install-packages
echo 'Configuring terminal...'
$BASEDIR/bin/configure-terminal
echo 'Configuring Git...'
$BASEDIR/bin/configure-git
echo 'Installing Chrome...'
$BASEDIR/bin/install-chrome
echo 'Installing Code...'
$BASEDIR/bin/install-code
